<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="cn.misection.study.subthreadupdateui.controller.SubThreadUpdateUiActivity">

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/sub_thread_update_ui_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="Hello World!" />

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/sub_thread_update_ui_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                app:layout_constraintTop_toBottomOf="@+id/sub_thread_update_ui_tv"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="子线程更新UI测试"
                android:onClick="onSubUpdateUiButtonClicked"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>